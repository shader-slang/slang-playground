{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "compiler.ts",
    "compute.ts",
    "demos/demo-list.ts",
    "language-server.ts",
    "src/main.ts",
    "pass_through.ts",
    "playgroundShader.ts",
    "try-slang.ts",
    "util.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@webgpu/types",
      "jjsontree.js",
      "./src/spirv-tools",
      "requirejs",
      "@types/emscripten"
    ]
  }
}